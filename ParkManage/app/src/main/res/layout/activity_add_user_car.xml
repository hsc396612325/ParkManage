<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.heshu.parkmanage.activity.UserCarActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="昵称"
                android:textColor="@color/colorTextBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/car_name"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@+id/text"
                android:background="@null"
                android:gravity="left|bottom"
                android:hint="请给你的爱车起一个昵称"
                android:inputType="phone"
                android:textColor="#FF888888"
                android:textSize="14dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_below="@+id/user_name"
                android:layout_marginTop="12dp"
                android:background="#C0C0C0" />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:text="车牌号"
                android:textColor="@color/colorTextBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/user_car_plate_number"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/text2"
                android:layout_below="@+id/text"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:gravity="left|bottom"
                android:hint="请输入车牌号"
                android:inputType="phone"
                android:textColor="#FF888888"
                android:textSize="14dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_below="@+id/user_car_plate_number"
                android:layout_marginTop="12dp"
                android:background="#C0C0C0" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="颜色"
                android:textColor="@color/colorTextBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/user_car_color"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@+id/text3"
                android:background="@null"
                android:gravity="left|bottom"
                android:hint="请输入车的颜色"
                android:inputType="phone"
                android:textColor="#FF888888"
                android:textSize="14dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_below="@+id/user_car_color"
                android:layout_marginTop="12dp"
                android:background="#C0C0C0" />
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:text="品牌"
                android:textColor="@color/colorTextBlack"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/user_car_trademark"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/text4"
                android:layout_below="@+id/text3"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:gravity="left|bottom"
                android:hint="请输入品牌"
                android:inputType="phone"
                android:textColor="#FF888888"
                android:textSize="14dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.4dp"
                android:layout_below="@+id/user_car_trademark"
                android:layout_marginTop="12dp"
                android:background="#C0C0C0" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/refer"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="提交信息"
        android:textColor="@color/colorTextGrey" />
</LinearLayout>
