<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="车辆1"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/user_car_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_car_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="白"
            />

        <TextView
            android:id="@+id/user_car_trademark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_car_color"
            android:layout_below="@+id/user_car_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="桑塔纳"
            />

        <TextView
            android:id="@+id/user_car_plate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_car_color"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:text="陕E MR110"
            />
        <TextView
            android:id="@+id/user_car_compile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="编辑"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/user_car_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/user_car_compile"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:text="删除"
            android:textSize="17sp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>