<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">


        <View
            android:id="@+id/view"
            android:layout_width="3dp"
            android:layout_height="110dp"
            android:background="@color/colorTextGrey"
            android:layout_alignParentLeft="true"
            />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/view"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="订单号"
                />

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="120180607758469598"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:layout_marginRight="20dp"
                android:text="订单取消"
                android:textSize="15sp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/line1"
            android:background="#C0C0C0" />

        <TextView
            android:id="@+id/park_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view"
            android:layout_below="@id/line1"
            android:text="# 15"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/park_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/park_place"
            android:layout_below="@id/line1"
            android:text="顺丰停车场"

            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/ic_money"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/view"
            android:layout_below="@id/park_name"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_money_gray"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_money"
            android:layout_below="@id/park_name"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:text="订单金额"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text"
            android:layout_below="@id/park_name"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:text="￥4.00"
            android:textSize="14sp"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>